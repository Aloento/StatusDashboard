<scale-modal
  heading="Edit Event"
  id="@nameof(EventEditor)"
  size="small">
  <EditForm class="flex flex-col gap-y-6" Model="model" OnValidSubmit="submit">
    <DataAnnotationsValidator />

    <div>
      <FluentTextField
        AutoComplete="off"
        Autofocus="true"
        @bind-Value="model.Title"
        Class="w-full"
        Label="@nameof(model.Title)"
        Placeholder="Please give the title of event"
        Required="true" />

      <ValidationMessage
        class="text-red-600"
        For="@(() => model.Title)" />
    </div>

    <div>
      <FluentSelect
        @bind-SelectedOption="model.Type"
        Items="@(Enum.GetValues<EventType>().Skip(1))"
        Label="@nameof(model.Type)"
        TOption="EventType" />
    </div>

    @{
      var values = Enum.GetValues<EventStatus>();
      var status =
        model.Type == EventType.Maintenance
          ? values.Take(4)
          : values.Skip(4);
    }

    <div>
      <FluentSelect
        @bind-SelectedOption="model.Status"
        Items="@status"
        Label="@nameof(model.Status)"
        TOption="EventStatus" />
    </div>

    <div>
      <FluentTextArea
        @bind-Value="model.UpdateMsg"
        Class="w-full"
        Label="Update Message"
        Resize="TextAreaResize.Vertical" />

      <ValidationMessage
        class="text-red-600"
        For="@(() => model.UpdateMsg)" />
    </div>

    <scale-button class="self-end" size="small" type="submit">
      Submit
    </scale-button>
  </EditForm>
</scale-modal>

<scale-button onclick="openModal()" size="small">
  <scale-icon-action-edit accessibility-title="edit" />
  Edit
</scale-button>

<script>
  function openModal() {
    const modal = document.getElementById("EventEditor");
    modal.opened = true;
  }
</script>
