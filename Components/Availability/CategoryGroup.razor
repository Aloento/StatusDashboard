@using Microsoft.EntityFrameworkCore
@using StatusDashboard.Services
@implements IAsyncDisposable
@inject IDbContextFactory<StatusContext> context;

<tr>
  <td rowspan="@services.Length" class="text-lg">
    @Category.Name
  </td>

  <td class="text-lg">
    @services.First().Service.Name
  </td>
  
  @for (var j = 0; j < 6; j++)
  {
    <td class="border-l bg-emerald-100 text-center hover:bg-emerald-200">
      100.00
    </td>
  }
</tr>

@for (var i = 1; i < services.Length; i ++)
{
  <tr>
    <td class="text-lg">
      @services[i].Service.Name
    </td>
  
    @for (var j = 0; j < 6; j++)
    {
      <td class="border-l bg-emerald-100 text-center hover:bg-emerald-200">
        100.00
      </td>
    }
  </tr>
}
