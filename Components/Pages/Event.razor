@page "/Event/{id:int}"
@using StatusDashboard.Components.Event
@using StatusDashboard.Services
@inject IEventManager<EventEditor> onSubmit

<PageTitle>Event @Id - OTC Status Dashboard</PageTitle>

<CascadingValue Value="Id">
  <CascadingValue Value="onSubmit">
    <EventCard/>
    <EventLog/>
  </CascadingValue>
</CascadingValue>

@code {
  [Parameter] public int Id { get; set; }
}
