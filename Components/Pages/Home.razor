@page "/"

<PageTitle>OTC Status Dashboard</PageTitle>

<scale-notification
  heading="All Systems Operational"
  opened
  variant="success" />

<section class="flex flex-col" id="RegionSelector">
  <div class="flex items-center justify-between">
    <label class="text-2xl font-semibold">OTC Current Status</label>

    <scale-tab-nav>

      <scale-tab-header slot="tab">Germany</scale-tab-header>
      <scale-tab-panel class="hidden" slot="panel" />

      <scale-tab-header slot="tab">Netherlands</scale-tab-header>
      <scale-tab-panel class="hidden" slot="panel" />

    </scale-tab-nav>
  </div>

  <scale-divider class="p-0" />
</section>

<section class="grid-cols-1 grid gap-4 md:grid-cols-3 sm:grid-cols-2">
  <div class="flex h-32 items-center justify-center bg-blue-500 text-white">
    对象1
  </div>
  <div class="flex h-32 items-center justify-center bg-red-500 text-white">
    对象2
  </div>
  <div class="flex h-32 items-center justify-center bg-green-500 text-white">
    对象3
  </div>
</section>
