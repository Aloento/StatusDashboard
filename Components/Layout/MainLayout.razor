@inherits LayoutComponentBase

<FluentDesignTheme Mode="DesignThemeModes.Light" CustomColor="#e20074" />

<div class="absolute flex min-h-full w-full min-w-96 flex-col bg-zinc-50">
  <TopNavBar />

  <main class="mx-auto flex w-full max-w-screen-xl flex-col gap-y-8 px-3 pt-8">
    @Body
  </main>

  <PageFooter />
</div>

<div id="blazor-error-ui" class="fixed bottom-0 left-0 z-50 w-full">
  An unhandled error has occurred.
  <button class="reload cursor-pointer text-blue-500">Reload</button>
  <button class="dismiss absolute right-3 top-2 cursor-pointer">🗙</button>
</div>
